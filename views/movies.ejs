<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" type="image/x-icon" href="/img/cinema.svg">
  <link rel="stylesheet" href="/output.css">
  <title><%= title %></title>
</head>
<body>
  <div class="">
    <%- include("partials/navbar") %>
    <div class="w-full">
      <div class="px-8 mt-4 w-full flex flex-wrap gap-4 justify-center">
        <% movies.forEach(movie => { %>
          <a href="/movies/<%= movie.movie_id %>" class="">
            <div class="w-48 h-48 px-2 border-2 border-black rounded-2xl flex flex-col items-center justify-center transition duration-300 ease-in-out hover:scale-105 hover:shadow-lg">
              <h1 class="font-bold text-xl"><%= movie.title %></h1>
              <p class="text-center"><%= movie.genre %></p>
              <p class="text-center"><%= movie.director %></p>
              <p class="text-center"><%= movie.year %></p>
            </div>
          </a>
        <% }) %>
      </div> 
    </div>
  </div>
</body>
</html>